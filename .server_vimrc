
set noerrorbells
set tabstop=4 softtabstop=4
set expandtab
set smartindent
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set term=screen-256color
set virtualedit+=onemore
set colorcolumn=
set number

colorscheme slate 
"Key Bindings
inoremap jk <ESC>
inoremap <ESC> <NOP>

vnoremap jk <ESC>
vnoremap <ESC> <NOP>

cnoremap jk <ESC>

nnoremap <space> i<space><ESC>
nnoremap <silent> nj o<Esc>k
nnoremap <silent> n O<Esc>j
nnoremap <Tab> >> 
nnoremap <S-Tab> << 
vnoremap < <gv
vnoremap > >gv
